{
  "lexicon": "1",
  "id": "com.fujocoded.guestbook.defs",
  "defs": {
    "guestbookView": {
      "type": "object",
      "required": ["uri", "owner"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 8096000,
          "maxGraphemes": 4096000
        },
        "submissionsCount": {
          "type": "integer"
        }
      }
    },
    "submissionView": {},
    "profileView": {
      "type": "object",
      "required": ["did"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        },
        "handle": { "type": "string", "format": "handle" }
      }
    }
  }
}
